{
  "name": "web2driver",
  "version": "3.0.1",
  "description": "Pure-JS, browser-based WebDriver (+ Appium) client",
  "main": "./dist/main.js",
  "targets": {
    "main": {
      "includeNodeModules": true
    }
  },
  "scripts": {
    "build:web": "parcel build index.js",
    "build:node": "tsc",
    "clean": "npm run clean:cache && rm -rf package-lock.json && rm -rf node_modules && npm install",
    "clean:cache": "rm -rf ./dist && rm -rf ./node && rm -rf ./.parcel-cache",
    "test:web": "parcel serve './test/*.html' --open",
    "test:web:rerun": "parcel serve './test/*.html'",
    "test:node": "mocha -t 180000 -R spec ./node/test",
    "prepublishOnly": "npm run build:web && npm run build:node"
  },
  "files": [
    "dist/main.js",
    "dist/main.js.map",
    "node",
    "src",
    "index.js",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/projectxyzio/web2driver.git"
  },
  "keywords": [
    "Appium",
    "Selenium",
    "WebDriver",
    "Testing"
  ],
  "author": "Jonathan Lipps <jlipps@headspin.io>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/projectxyzio/web2driver/issues"
  },
  "homepage": "https://github.com/projectxyzio/web2driver#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^9.0.3",
    "parcel": "^2.0.0-rc.0",
    "should": "^13.2.3",
    "source-map-support": "^0.5.9",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@wdio/logger": "^7.7.0",
    "@wdio/protocols": "^7.7.4",
    "lodash": "^4.17.11",
    "process": "^0.11.10",
    "webdriver": "^7.9.1"
  }
}
