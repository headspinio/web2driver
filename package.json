{
  "name": "web2driver",
  "version": "2.0.0",
  "description": "Pure-JS, browser-based WebDriver (+ Appium) client",
  "main": "./dist/main.js",
  "targets": {
    "main": {
      "includeNodeModules": true
    }
  },
  "scripts": {
    "build:web": "parcel build index.js",
    "build:node": "tsc",
    "clean": "rm -rf ./dist && rm -rf ./node && rm -rf package-lock.json && rm -rf node_modules && rm -rf .parcel-cache && npm install",
    "test:web": "parcel serve './test/*.html' --open",
    "test:node": "mocha -t 180000 -R spec ./node/test",
    "prepublish": "npm run build:web && npm run build:node"
  },
  "files": [
    "dist/main.js",
    "dist/main.js.map",
    "node",
    "src",
    "index.js",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/projectxyzio/web2driver.git"
  },
  "keywords": [
    "Appium",
    "Selenium",
    "WebDriver",
    "Testing"
  ],
  "author": "Jonathan Lipps <jlipps@headspin.io>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/projectxyzio/web2driver/issues"
  },
  "homepage": "https://github.com/projectxyzio/web2driver#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^8.4.0",
    "parcel": "^2.0.0-beta.3.1",
    "should": "^13.2.3",
    "source-map-support": "^0.5.9",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "process": "^0.11.10",
    "webdriver": "^5.2.5"
  }
}
